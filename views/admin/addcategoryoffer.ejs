<%- include("../partials/admin/header.ejs") %>

<style>
    body {
    font-family: Arial, sans-serif;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 600px;
    margin: 50px auto;
    background: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

h2 {
    color: #333;
    margin-bottom: 20px;
}

.form-label {
    font-weight: bold;
    color: #555;
}

.btn-primary {
    background-color: #007bff;
    border: none;
    font-size: 16px;
}

.btn-primary:hover {
    background-color: #0056b3;
}

form {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
}
</style>
<div class="container mt-5">
    <h2 class="text-center">Apply Category Offer</h2>
    <form action="/admin/addCategoryOffer" method="POST" class="p-4 border rounded">
        <div class="mb-3">
            <label for="category" class="form-label">Select Category</label>
            <select name="categoryId" id="category" class="form-control" required>
                <% categories.forEach(category => { %>
                    <option value="<%= category._id %>"><%= category.name %></option>
                <% }) %>
            </select>
        </div> 
        <div class="mb-3">
            <label for="offer" class="form-label">Set Offer Percentage</label>
            <input type="number" name="offer" id="offer" class="form-control" min="0" max="100" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Apply Offer</button>
    </form>
</div>

<%- include("../partials/admin/footer.ejs") %>