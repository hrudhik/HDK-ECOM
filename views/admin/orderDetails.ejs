<%- include("../partials/admin/header.ejs") %>

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="h4 mb-0">Order Details</h1>
        </div>
        <div class="card-body">
            <!-- Order Info -->
            <div class="mb-4">
                <p><strong>Order ID:</strong> <%= order._id %></p>
                <p><strong>User:</strong> <%= order.userId.name %></p>
                <p><strong>Status:</strong> 
                    <span class="badge <%= order.status === 'Delivered' ? 'bg-success' : order.status === 'Pending' ? 'bg-warning' : 'bg-secondary' %>">
                        <%= order.status %>
                    </span>
                </p>
            </div>

            <!-- Order Items -->
            <h3 class="h5 mb-3">Items</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% order.items.forEach(function(item) { %>
                            <tr>
                                <td><%= item.productId?.productName %></td>
                                <td><%= item.quantity %></td>
                                <td>&#8377;<%= item.price %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <!-- Shipping Address -->
            <h3 class="h5 mt-4">Shipping Address</h3>
            <p class="mb-1"><strong>Name:</strong> <%= order.shippingAddress.name %></p>
            <p class="mb-1"><strong>Address:</strong> <%= order.shippingAddress.address %>, <%= order.shippingAddress.city %></p>
            <p><strong>Zip Code:</strong> <%= order.shippingAddress.zipCode %></p>

            <!-- Total Amount -->
            <h3 class="h5 mt-4">Total Amount: <span class="text-success">&#8377;<%= order.totalAmount %></span></h3>

            <!-- Back Button -->
            <a href="/admin/orders" class="btn btn-outline-secondary mt-3">Back to Orders</a>
        </div>
    </div>
</div>

<%- include("../partials/admin/footer.ejs") %>
