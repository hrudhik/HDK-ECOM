    <script>
        function changeImage(thumbnail) {
            const mainImage = document.getElementById('mainImage');
            mainImage.src = thumbnail.src;
            mainImage.alt = thumbnail.alt;

            // Update active thumbnail
            document.querySelectorAll('.thumbnail').forEach(thumb => {
                thumb.classList.remove('active');
            });
            thumbnail.classList.add('active');
        }

        function changeQuantity(change) {
            const quantityElement = document.getElementById('quantity');
            let quantity = parseInt(quantityElement.textContent) + change;
            quantity = Math.max(1, quantity); // Ensure quantity is at least 1
            quantityElement.textContent = quantity;
        }

       

        function zoomImage(e) {
    const image = e.target; // The image being hovered
    const zoomer = e.currentTarget; // The container element
    const rect = zoomer.getBoundingClientRect(); // Get element position
    const x = (e.clientX - rect.left) / rect.width; // Calculate relative X position
    const y = (e.clientY - rect.top) / rect.height; // Calculate relative Y position
    const zoomLevel = 2;

    // Use template literals for transformOrigin and transform
    image.style.transformOrigin = `${x * 100}% ${y * 100}%`;
    image.style.transform = `scale(${zoomLevel})`;
}

     
function resetZoom(e) {
    console.log("Mouse left the container");

    const image = e.target; // The image being reset
    image.style.transformOrigin = 'center center';
    image.style.transform = 'scale(1)';
}


        // add to cart function
        function addToCart(productId) {
    $.ajax({
        url: "/addTocart",
        method: "POST",
        data: {
            productId: productId,
            quantity: 1
        },
        success: (response) => {
            if (response.success) {
                if (response.message === 'Product added to cart successfully!') {
                    Swal.fire({
                        title: "Added To Cart",
                        text: "The product has been added to your cart.",
                        icon: "success",
                        timer: 2000
                    });
                } else if (response.message === 'Product already exists in cart') {
                    Swal.fire({
                        title: "Product Already in Cart",
                        text: "The product is already in your cart.",
                        icon: "info",
                        timer: 2000
                    });
                }
            }
        },
        error: (error) => {
            Swal.fire({
                title: "Error",
                text: "Failed to add the product to your cart. Please try again.",
                icon: "error",
                timer: 2000
            });
        }
    });
}




