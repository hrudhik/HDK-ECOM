            margin: 20px 0;
            border: 2px solid #ddd;
            border-radius: 50%;
            background: #f9f9f9;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #timerValue {
            font-size: 22px;
            font-weight: 600;
            color: #333;
        }

        #timerValue.expired {
            font-size: 16px;
            color: red;
        }

        /* Buttons */
        .btn {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
