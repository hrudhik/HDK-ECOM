<%- include("../partials/user/header.ejs") %>   

<style>
/* General Styles */
.main {
    padding: 30px 0;
    background-color: #f5f7fa;
}
.card {
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease-in-out;
}
.card:hover {
    transform: scale(1.02);
}
.card-green {
    background-color: #d4edda;
    border-left: 5px solid #28a745;
}
.card-header {
    background-color: #0066cc;
    color: white;
    border-radius: 10px 10px 0 0;
    text-align: center;
    font-weight: bold;
}
.btn-custom {
    background-color: #28a745;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    text-align: center;
    display: inline-block;
    transition: 0.3s;
}
.btn-custom:hover {
    background-color: #218838;
}

/* Sidebar */
.dashboard-menu {
    background-color: #e3f2fd;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}
.dashboard-menu ul {
    padding: 0;
    list-style: none;
}
.dashboard-menu .nav-item {
    margin-bottom: 15px; /* Increased gap */
}
.dashboard-menu .nav-link,
.dashboard-menu a {
    display: block;
    padding: 12px 15px;
    font-size: 16px;
    font-weight: bold;
    color: #0056b3;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease-in-out;
}
.dashboard-menu .nav-link:hover,
.dashboard-menu a:hover {
    background-color: #ff6f61;
    color: white;
    transform: translateX(5px);
    box-shadow: 0 4px 10px rgba(255, 111, 97, 0.3);
}
.dashboard-menu .nav-link.active {
    background-color: #0066cc;
    color: white;
}

/* Responsive */
@media (max-width: 768px) {
    .dashboard-menu {
        text-align: center;
    }
    .dashboard-menu .nav-link {
        font-size: 14px;
        padding: 10px;
    }
}
</style>

<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a> 
                <span> > </span> <a href="/userProfile">Profile</a> 
            </div>
        </div>
    </div>

    <section class="pt-4 pb-4">
        <div class="container">
            <div class="row">
                <!-- Sidebar Menu -->
                <div class="col-md-4">
                    <div class="dashboard-menu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link active" href="#dashboard">
                                    <i class="fi-rs-settings-sliders"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/addressmanagement">
                                    <i class="fi-rs-marker"></i> My Address
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/orderdetails">
                                    <i class="fi-rs-shopping-bag"></i> Orders
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/wallet">
                                    <i class="fi-rs-wallet"></i> Wallet
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/logout">
                                    <i class="fi-rs-sign-out"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-md-8">
                    <div class="tab-content dashboard-content">
                        <!-- Profile Section -->
                        <div class="tab-pane fade show active" id="dashboard">
                            <div class="card card-green">
                                <div class="card-header">User Profile</div>
                                <div class="card-body text-center">
                                    <h5><%= user.name %></h5>
                                    <p><strong>Phone: </strong><%= user.phone %></p>
                                    <p><strong>Email: </strong><%= user.email %></p>
                                    <a href="/loadchangepassword" class="btn-custom">Change Password</a>
                                </div>
                            </div>
                        </div>

                        <!-- Address Section -->
                        <div class="tab-pane fade" id="address">
                            <div class="row">
                                <% if (userAddress) { %>
                                    <% userAddress.address.forEach((address) => { %>
                                        <div class="col-md-6">
                                            <div class="card">
                                                <div class="card-header"><%= address.addressType %></div>
                                                <div class="card-body">
                                                    <address>
                                                        <%= address.name %><br>
                                                        <%= address.city %>, <%= address.landMark %><br>
                                                        <%= address.state %>, <%= address.pincode %><br>
                                                        <%= address.phone %> | <%= address.altPhone %>
                                                    </address>
                                                    <div class="d-flex justify-content-between">
                                                        <a href="/editAddress?id=<%= address._id %>" class="btn-custom">Edit</a>
                                                        <a href="/deleteAddress?id=<%= address._id %>" class="btn-custom" onclick="return confirm('Are you sure to delete this address?')">Delete</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <p>No address found.</p>
                                <% } %>
                                <div class="col-12 text-center mt-3">
                                    <a href="/addaddress" class="btn-custom">Add Address</a>
                                </div>
                            </div>
                        </div>

                        <!-- Wallet Section -->
                        <div class="tab-pane fade" id="wallet">
                            <div class="card">
                                <div class="card-header">Wallet</div>
                                <div class="card-body text-center">
                                    <h3>Balance: â‚¹<%= walletBalance %></h3>
                                    <form action="/top-up" method="POST">
                                        <label for="amount">Add Money:</label>
                                        <input type="number" id="amount" name="amount" min="1" required />
                                        <button type="submit" class="btn-custom">Add Money</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include("../partials/user/footer.ejs") %>
